@page
@model FuelManagement.Pages.loginModel
@{
	ViewData["Title"] = "Login - Fuel Management";
}

<section>
	<div class="container mt-5">
		<div class="row">
			<div class="col-md-5 mx-auto">
                <div class="login-card">
                    <h3 class="login-title">Fuel Tanks Management</h3>
                    <form method="post" asp-page-handler="Login">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Login.Password"  for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" asp-for="Login.Username" placeholder="Enter your username" />
                            <span asp-validation-for="Login.Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Login.Password"  for="password" class="form-label">Password</label>
                            <input type="text" class="form-control" asp-for="Login.Password" placeholder="Enter your password" />
                            <span asp-validation-for="Login.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="alert alert-danger">@Model.ErrorMessage</div>
                            }
                        </div>

                        <div class="d-grid mb-2">
                            <button type="submit"  class="btn btn-primary">Login</button>
                        </div>

                        <div class="d-grid mb-2">
                            <button type="reset" class="btn btn-outline-secondary">Reset Password</button>
                        </div>

                        <a href="/ForgotPassword" class="forgot-link">Forgot Password?</a>
                    </form>
                </div>

			</div>
		</div>
	</div>
</section>
